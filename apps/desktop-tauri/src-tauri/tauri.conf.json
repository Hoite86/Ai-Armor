{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AI Armor",
  "version": "0.1.0",
  "identifier": "local.aiarmor.desktop",
  "build": {
    "beforeDevCommand": "",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
